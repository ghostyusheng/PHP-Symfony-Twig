{% apply inline_css %}
    <html>
        <head>
            <style>
                .ads {
                  color: red;
                  display: flex;
                }

                .ads-img {
                  width: 200px;
                }

                .ads-title {
                  color: black;
                  margin-top: 20px;
                }
            </style>
            <script>
            </script>
        </head>
        <body>
          <b>Simple CMS config Demo</b>
          {% for i in products %}
          <div class="ads">
              {% set rand = random(3) %}
              {% set uri = 'img/'~rand~'.png' %}
              <img class="ads-img" src="{{asset(uri)}}" />
              <div>
                <div class="ads-title">{{i.title}}</div>
                <p>{{i.content}}</p>
              </div>
          </div>
          {% endfor %}
          <form action="add">
            <label>Add new Ads Title</label>
            <input type="text" id="title" name="title"><br><br>
            <label>Add new Ads Content:</label>
            <input type="text" id="content" name="content"><br><br>
            <button type="submit" id="submit">submit</button>
          </form>
        </body>
    </html>
{% endapply %}
